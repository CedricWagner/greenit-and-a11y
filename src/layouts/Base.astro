---
import LinkIcon from "../components/LinkIcon/LinkIcon";
import Menu from "../components/Menu/Menu";
import Footer from "../components/Footer.astro";
const { pageTitle } = Astro.props; 
const menuPages = [
    {
        title: "Accueil",
        href: "./",
        icon: "⌂"
    },
    {
        title: "Contact",
        href: "./contact",
        icon: "@"
    }
];
const footerPages = [
    {
        title: "Mentions légales",
        href: "./mentions-legales"
    },
    {
        title: "Déclarations d'accessibilité",
        href: "./accessibilité"
    }
];
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="bg-slate-600 text-white flex flex-col min-h-screen print:text-slate-700 print:bg-white print:font-gothic">
        <header class="bg-slate-800 fixed w-[100%] print:hidden">
            <div class="container mx-auto py-2 px-4 flex justify-between">
                <LinkIcon href={"./"} title={"Accueil"} isIconOnly={true}>⌂</LinkIcon>
                <Menu client:load pages={menuPages}>≡</Menu>
            </div>
        </header>
        <main class="flex-1 mt-12">
            <div class="container mx-auto p-4">
                <h1 class="text-xl font-bold">{pageTitle}</h1>
                <slot />
            </div>
        </main>
        <Footer links={footerPages}></Footer>
	</body>
</html>
